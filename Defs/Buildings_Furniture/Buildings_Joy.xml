<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>Radio_Industrial</defName>
    <label>industrial radio</label>
    <description>An old device from a bygone era, it is able to pick up radio waves and play them back. Even on the rimworlds, there is often an old transmitter or lone radio station broadcasting something.</description>
    <graphicData>
      <texPath>Things/Joy/Radio_Industrial/Radio_Industrial</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.1, 1.1)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <passability>PassThroughOnly</passability>
    <defaultPlacingRot>South</defaultPlacingRot>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
		<shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>120</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>10000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <tradeTags>
      <li>Television</li>
    </tradeTags>
    <constructEffect>ConstructMetal</constructEffect>
    <designationCategory>Joy</designationCategory>
    <researchPrerequisites><li>TubeTelevision</li></researchPrerequisites>
    <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    <fillPercent>0.2</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <pathCost>25</pathCost>
    <rotatable>true</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <specialDisplayRadius>5</specialDisplayRadius>
  </ThingDef>


  <ThingDef ParentName="BuildingBase">
    <defName>Radio_Spacer</defName>
    <label>longwave radio</label>
    <description>A high tech radio reciever that is able to pick up very faint signals and play them back at crystal clear quality.</description>
    <graphicData>
      <texPath>Things/Joy/Radio_Modern/Radio_Modern</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(1.2, 1.2)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <costList>
      <Steel>100</Steel>
      <ComponentIndustrial>10</ComponentIndustrial>
    </costList>
    <passability>PassThroughOnly</passability>
    <defaultPlacingRot>South</defaultPlacingRot>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
		<shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>200</basePowerConsumption>
      </li>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
	  <li>
        <compClass>CompGatherSpot</compClass>
      </li>
    </comps>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <WorkToBuild>30000</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>12</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <tradeTags>
      <li>Television</li>
    </tradeTags>
    <constructEffect>ConstructMetal</constructEffect>
    <designationCategory>Joy</designationCategory>
    <researchPrerequisites><li>FlatscreenTelevision</li></researchPrerequisites>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <fillPercent>0.2</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <pathCost>25</pathCost>
    <rotatable>true</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <minifiedDef>MinifiedThing</minifiedDef>
    <specialDisplayRadius>8</specialDisplayRadius>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>Joy_Arcade</defName>
    <label>arcade machine</label>
    <description>A tall cabinet that holds a small cathode ray display and control panel for playing a variety of pre-installed games.</description>
    <graphicData>
      <texPath>Things/Joy/Arcade/Arcade</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <shadowData>
        <volume>(0.08, 0.2, 0.08)</volume>
        <offset>(0, 0, -0.47)</offset>
      </shadowData>
      <damageData>
        <rect>(0.3,0.3,0.4,0.4)</rect>
      </damageData>
	  <drawSize>(1.85,2.5)</drawSize>
    </graphicData>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
	<drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>8</Mass>
      <Flammability>1.0</Flammability>
      <JoyGainFactor>1.3</JoyGainFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <defaultPlacingRot>South</defaultPlacingRot>
    <researchPrerequisites><li>TubeTelevision</li></researchPrerequisites>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <building>
      <joyKind>Gaming_Electronic</joyKind>
      <watchBuildingStandDistanceRange>
        <min>1</min>
        <max>1</max>
      </watchBuildingStandDistanceRange>
      <watchBuildingStandRectWidth>1</watchBuildingStandRectWidth>
    </building>
    <costStuffCount>30</costStuffCount>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <pathCost>10</pathCost>
    <designationCategory>Joy</designationCategory>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>120</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_RoomIdentifier">
        <roomStat>Impressiveness</roomStat>
      </li>
    </comps>
    <tradeTags>
      <li>Television</li>
    </tradeTags>
  </ThingDef>
 
  <ThingDef ParentName="FurnitureWithQualityBase">
    <defName>Joy_RouletteTable</defName>
    <label>roulette table</label>
    <description>A soft-topped bounded table with a wheel for playing roulette, a good way to train your social skills and luck.</description>
    <graphicData>
      <texPath>Things/Joy/Roulette_Table/RouletteTable</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.9,3.8)</drawSize>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <building>
      <joyKind>Social</joyKind>
    </building>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>300</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>1</Beauty>
      <JoyGainFactor>1.3</JoyGainFactor>
    </statBases>
    <size>(2,3)</size>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>160</costStuffCount>
    <costList>
      <Cloth>40</Cloth>
    </costList>
    <pathCost>70</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <researchPrerequisites>
      <li>MF_ModernFurniture</li>
    </researchPrerequisites>
		<comps>
			<li Class="CompProperties_RoomIdentifier">
				<roomStat>Impressiveness</roomStat>
			</li>
		</comps>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>
</Defs>
