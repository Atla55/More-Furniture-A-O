<Defs>
  <ThingDef ParentName="BedWithQualityBase">
    <defName>Bed_StoneSlab</defName>
    <label>slab bed</label>
    <description>A large slab of smoothed stone, very uncomfortable and only marginally better than sleeping on the floor.</description>
    <graphicData>
      <texPath>Things/Bedroom/BedSlab/BedSlab</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(2,2)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <comps>
      <li Class="CompProperties_AffectedByFacilities">
        <linkableFacilities>
          <li>EndTable</li>
          <li>Dresser</li>
        </linkableFacilities>
      </li>
    </comps>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>1</Beauty>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>80</Mass>
      <BedRestEffectiveness>0.80</BedRestEffectiveness>
      <Comfort>0.5</Comfort>
      <ImmunityGainSpeedFactor>0.95</ImmunityGainSpeedFactor>
	  <SurgerySuccessChanceFactor>0.98</SurgerySuccessChanceFactor>
    </statBases>
    <size>(1,2)</size>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <building>
      <bed_showSleeperBody>True</bed_showSleeperBody>
      <bed_healPerDay>3</bed_healPerDay>
    </building>
    <fillPercent>0.4</fillPercent>
    <pathCost>60</pathCost>
    <staticSunShadowHeight>0.17</staticSunShadowHeight>
    <castEdgeShadows>True</castEdgeShadows>
    <techLevel>Neolithic</techLevel>
    <uiIconScale>0.90</uiIconScale>
  </ThingDef>
  
